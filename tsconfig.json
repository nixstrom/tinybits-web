{
	"include": ["./src/**/*"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	}
}
